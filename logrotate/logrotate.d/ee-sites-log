/opt/easyengine/sites/*/logs/nginx/*.log
/opt/easyengine/sites/*/logs/php/*.log
{
    daily
    missingok
    rotate 14
    compress
    delaycompress
    notifempty
    copytruncate
    sharedscripts
    postrotate
        echo "$(date +'[%d/%m/%Y %H:%M:%S]') LogRotate.INFO: Daily rotate site logs" >> /opt/easyengine/logs/ee.log
    endscript
}
